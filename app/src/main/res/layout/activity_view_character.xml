<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ViewCharacter">

    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="1520dp"
            android:layout_height="1011dp"
            android:id="@+id/imageView4"
            android:layout_gravity="center_horizontal|top"
            android:src="@drawable/background"
            android:adjustViewBounds="true"
            android:tint="#daffffff" />

        <ListView
            android:id="@+id/character_loader"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </FrameLayout>


    <!--left nav Drawer-->
    <ListView
        android:id="@+id/navigation_drawer_left"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:textColor="#ffffff"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ff3a8b88" />

    <!--right nav Drawer-->
    <ListView
        android:id="@+id/navigation_drawer_right"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:choiceMode="singleChoice"
        android:textColor="#ffffff"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ff3a8b88" />


</android.support.v4.widget.DrawerLayout>